<p id="notice"><%= notice %></p>

<h1>Colonies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colonies.each do |colony| %>
      <tr>
        <td><%= colony.name %></td>
        <td><%= colony.description %></td>
        <td><%= colony.contact %></td>
        <td><%= link_to 'Show', colony %></td>
        <td><%= link_to 'Edit', edit_colony_path(colony) %></td>
        <td><%= link_to 'Destroy', colony, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Colony', new_colony_path %>
